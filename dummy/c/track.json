{
  "version": 2,
  "description": "Composable template first (expect 400), then component",
  "schedule": [
    {
      "operation": {
        "operation-type": "create-composable-template",
        "template": "dummy-template-1",
        "body": {
          "index_patterns": [
            "dummy-*"
          ],
          "template": {
          },
          "composed_of": [
            "dummy-component-1"
          ]
        }
      }
    },
    {
      "operation": {
        "operation-type": "create-component-template",
        "template": "dummy-component-1",
        "body": {
          "template": {
            "settings": {
              "number_of_shards": 1
            },
            "mappings": {
              "_source": {
                "enabled": false
              }
            }
          }
        }
      }
    }
  ]
}
